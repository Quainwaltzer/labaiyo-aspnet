@model LabaIyo.Models.Laundry
@section Styles {
    <link href="~/css/main.css" rel="stylesheet" />
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Laba-Iyo Database System</title>
    <link rel="stylesheet" href="styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>

<body>
    <main>
        <!-- Header -->
       

        <!-- Main Form Container -->
        <section class="container">
            <form asp-action="Create" asp-controller="Laundry" method="post">

                <!-- Customer Info Table -->
                <table>
                    <thead>
                        <tr><th colspan="2">Customer Information</th></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><label for="customerID">Customer ID:</label></td>
                            <td>
                                <div class="input-with-button">
                                    <input type="text" id="customerID" name="customerID" placeholder="XX.XXX.XX.XXX"/>
                                    <button type="button" onclick="generateUniqueId('customerID')">🎲</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><label asp-for="fname">First Name:</label></td>
                            <td><input type="text" asp-for="fname" id="firstName" /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="lname">Last Name:</label></td>
                            <td><input type="text" asp-for="lname" id="lastName"  /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="phone" >Contact Number:</label></td>
                            <td><input type="tel" asp-for="phone" id="contact"  maxlength="13"   /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="address">Address:</label></td>
                            <td><input type="text" asp-for="address" id="address" /></td>
                        </tr>
                        <tr>
                            <td><label asp-for="email">Email:</label></td>
                            <td><input type="email" asp-for="email" id="email" /></td>
                        </tr>
                        <tr>
                            <td><label for="bill_id">Bill ID:</label></td>
                            <td>
                                <div class="input-with-button">
                                    <input type="text" id="bill_id"  "bill_id"/>
                                    <button type="button" onclick="generateUniqueId('bill_id')">🎲</button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td><label for="billAmount">Bill Amount:</label></td>
                            <td><input type="text" id="billAmount"  "bill_amount"   /></td>
                        </tr>
                        <tr>
                            <td><label for="quantity">Quantity:</label></td>
                            <td><input type="number" id="quantity"  "quantity" min="1"/></td>
                        </tr>
                        <tr>
                            <td><label for="return_date_time">Return Date/Time:</label></td>
                            <td><input type="datetime-local" id="return_date_time"  "return_date_time" onchange="checkDate()"/></td>
                        </tr>
                    </tbody>
                </table>

                <!-- Laundry Items Table -->
                <table id="items_table">
                    <thead>
                        <tr><th colspan="6">Laundry Items</th></tr>
                        <tr>
                            <th>Type</th>
                            <th>Name</th>
                            <th>Color</th>
                            <th>Quantity</th>
                            <th>ID</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="itemsTable">
                        <tr>
                            <td>
                                <select name="item_type_"  >
                                    <option value="null">Select Item Type</option>
                                    <option value="Tops">Tops</option>
                                </select>
                            </td>
                            <td>
                                <select name="item_name_">
                                    <option value="null">Select Item Name</option>
                                </select>
                            </td>
                            <td>
                                <select name="item_color_"  >
                                    <option value="null">Select Color</option>
                                    <option value="black">Black</option>
                                </select>
                            </td>
                            <td>
                                <input type="number" name="item_quantity_" min="1"  />
                            </td>
                            <td>
                                <div class="input-with-button">
                                    <input type="text" name="item_id_" placeholder="XX.XXX.XX.XXX" />
                                    <button type="button" onclick="generateUniqueId('item_id_')">🎲</button>
                                </div>
                            </td>
                            <td></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3"><label for="bag">Bag Color:</label></td>
                            <td colspan="3">
                                <select id="bag" name="bag"  >
                                    <option value="null">Select Color</option>
                                    <option value="black">Black</option>
                                </select>
                            </td>
                        </tr>
                    </tfoot>
                </table>

                <button type="button" id="addItemButton">Add Item</button>
                <button type="submit">Submit</button>
            </form>
        </section>
    </main>

    <footer>
        <div>
            <a href="#" class="fa fa-facebook"></a>
            <a href="#" class="fa fa-instagram"></a>
        </div>
        <p>&copy; 2023 Laba-Iyo Team. All rights reserved.</p>
        <p>Privacy Policy | Terms of Use</p>
    </footer>
</body>

</html>
